<h1> Edit Timesheet </h1>

<div class='static_details'>
	<div class='employee'> <%= @timesheet.employee.full_name %> </div>
	<div class='pay_period'> <%= @timesheet.pay_period.end_date %> </div>
</div>

<%= form_with model: @timesheet do |form| %>
	
	<%= form.fields_for :work_entries do |work_entry_fields| %>
		<p class="work_entry_fields">
			Project: <%= work_entry_fields.collection_select(:project_id, Project.all, :id, :name) %>
			Start Time: <%= work_entry_fields.text_field :start_time %>
			End Time: <%= work_entry_fields.text_field :end_time %>
		</p>
	<% end %>

<% end %>
