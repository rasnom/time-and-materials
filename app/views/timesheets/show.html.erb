<h1> Timesheet Details </h1>


<div class='timesheet-body' >

	<div class='header'>
		<div>
			Employee: <%= @timesheet.employee.full_name %>
		</div>
		<div>
			Pay Period: <%= @timesheet.pay_period.end_date %>
		</div>
		<div>
			Total hours: <%= @timesheet.total_hours %>
		</div>
	<div>

	<div class='work_entries_area'>
		<% @timesheet.work_entries.each do |work_entry| %>
			<div class='work_entry' id='work_entry-<%= work_entry.id %>'>
				Start: <%= work_entry.start_time.to_s %>
				End: <%= work_entry.end_time.to_s %>
			</div>
		<% end %>
	</div>
</div>

